
<div class="modal" id="bankEditModal" tabindex="-1">
	<div class="modal-dialog" data-bind="with: BankEditModal">
		<div class="modal-content" data-bind="if: CurrentItem">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
				<!-- ko if: CurrentItem().ID() > 0 -->
				<h4 class="modal-title">Банк <span class="text-ghost">#<span data-bind="text: CurrentItem().ID"></span></span></h4>
				<!-- /ko -->
				<!-- ko ifnot: CurrentItem().ID() > 0 -->
				<h4 class="modal-title">Новый банк</h4>
				<!-- /ko -->
			</div>
			<div class="modal-body">
				<div class="form-horizontal">
					<div class="row form-group">
						<div class="col-md-4">Наименование</div>
						<div class="col-md-8"><input class="form-control" data-bind="textInput: CurrentItem().Name"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">БИК</div>
						<div class="col-md-8"><input class="form-control" data-bind="textInput: CurrentItem().BIC"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">KSNP</div>
						<div class="col-md-8"><input class="form-control" data-bind="textInput: CurrentItem().KSNP"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">NNP</div>
						<div class="col-md-8"><input class="form-control" data-bind="textInput: CurrentItem().NNP"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">SWIFT</div>
						<div class="col-md-8"><input class="form-control" data-bind="textInput: CurrentItem().SWIFT"></div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-bind="click: Done">Готово</button>
			</div>
		</div>
	</div>
</div>
