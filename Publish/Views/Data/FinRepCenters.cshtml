@model IEnumerable<Logisto.Models.FinRepCenter>
@{
	ViewBag.Title = "ЦФО";
}

@section Styles{
}

@section Scripts {
	<script type="text/javascript">
		var modelData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
		var modelDictionaries = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Dictionaries));

		var app = app || {};
		app.urls = app.urls || {};
		app.urls.GetNewFinRepCenter = "@Url.Action("GetNewFinRepCenter", "Data")";
		app.urls.SaveFinRepCenter = "@Url.Action("SaveFinRepCenter", "Data")";
	</script>

	<script src="~/Scripts/Data/FinRepCenters.js"></script>
}

<div>
	<div class="row">
		<div class="col-md-5"><h2>ЦФО</h2></div>
		<div class="col-md-5"></div>
		<div class="col-md-2"><button class="btn btn-a" style="margin-top: 22px;" data-bind="click: OpenFinRepCenterCreate">+новый</button></div>
	</div>

	<table class="table table-condensed">
		<thead>
			<tr>
				<th class="col-md-2">Наше юрлицо</th>
				<th class="col-md-2">Наименование</th>
				<th class="col-md-2">Код</th>
				<th class="col-md-2">Описание</th>
				<th class="col-md-1"></th>
			</tr>
		</thead>
		<tbody>
			<!-- ko foreach: Items -->
			<tr>
				<td data-bind="text: app.utility.GetDisplay($parent.Dictionaries.OurLegal, OurLegalId)"></td>
				<td data-bind="text: Name"></td>
				<td data-bind="text: Code"></td>
				<td data-bind="text: Description"></td>
				<td><a class="btn btn-default btn-xs" data-bind="click: $parent.OpenFinRepCenterEdit"><span class="glyphicon glyphicon-pencil"></span></a></td>
			</tr>
			<!-- /ko -->
		</tbody>
	</table>
</div>


@Html.Partial("_FinRepCenterEditModal")