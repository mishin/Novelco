@model IEnumerable<Logisto.Models.ContractRole>
@{
	ViewBag.Title = "Стороны в договоре";
}

@section Styles{
}

@section Scripts {
	<script type="text/javascript">
		var modelData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));

		var app = app || {};
		app.urls = app.urls || {};
		app.urls.GetNewContractRole = "@Url.Action("GetNewContractRole", "Data")";
		app.urls.DeleteContractRole = "@Url.Action("DeleteContractRole", "Data")";
		app.urls.SaveContractRole = "@Url.Action("SaveContractRole", "Data")";
	</script>

	<script src="~/Scripts/Data/ContractRoles.js"></script>
}

<div>
	<div class="row">
		<div class="col-md-10"><h2>Стороны в договоре</h2></div>
		<div class="col-md-2 text-right"><button class="btn btn-a" style="margin-top: 22px;" data-bind="click:OpenContractRoleCreate">+новая</button></div></div>

	<table class="table table-condensed">
		<thead>
			<tr>
				<th class="col-md-2">Наименование</th>
				<th class="col-md-2">В творительном</th>
				<th class="col-md-2">В дательном</th>
				<th class="col-md-2">По английски</th>
				<th class="col-md-1"></th>
				<th class="col-md-1"></th>
			</tr>
		</thead>
		<tbody>
			<!-- ko foreach: Items -->
			<tr>
				<td data-bind="text: Display"></td>
				<td data-bind="text: AblativeName"></td>
				<td data-bind="text: DativeName"></td>
				<td data-bind="text: EnName"></td>
				<td><a class="btn btn-default btn-xs" data-bind="click: $parent.OpenContractRoleEdit"><span class="glyphicon glyphicon-pencil"></span></a></td>
				<td><a href="#" data-bind="click: $parent.DeleteContractRole" class="close">&times;</a></td>
			</tr>
			<!-- /ko -->
		</tbody>
	</table>
</div>


@Html.Partial("_ContractRoleEditModal")