
<div class="modal" id="cloneOrderModal" tabindex="-1" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog" data-bind="with: CloneOrderModal">
		<div class="modal-content" data-bind="if: CurrentItem">
			<div class="modal-header">
				<button type="button" class="close" data-bind="click: Close">&times;</button>
				<h4 class="modal-title">Создание копии заказа</h4>
			</div>
			<div class="modal-body">
				<div class="form-horizontal container-fluid">
					<div class="row form-group">
						<div class="col-md-4">Также копировать:</div>
					</div>
					<div class="row form-group">
						<div class="col-md-8 col-md-offset-4">
							<div class="checkbox">
								<label><input type="checkbox" data-bind="checked: IsCopyCargo" />груз</label>
							</div>
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-8 col-md-offset-4">
							<div class="checkbox">
								<label><input type="checkbox" data-bind="checked: IsCopyRoute" />маршрут</label>
							</div>
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-8 col-md-offset-4">
							<div class="checkbox">
								<label><input type="checkbox" data-bind="checked: IsCopyWorkgroup" />участников</label>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-bind="click: Done">Создать заказ</button>
			</div>
		</div>
	</div>
</div>