
<div class="modal" id="changePayMethodModal" tabindex="-1" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog" data-bind="with: ChangePayMethodModal">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-bind="click: Close">&times;</button>
				<h4 class="modal-title">Выбор метода оплаты</h4>
			</div>
			<div class="modal-body">
				<div class="container-fluid">
					<div class="row form-group">
						<div class="col-md-4 text-right form-text">Метод оплаты</div>
						<div class="col-md-8">
							<select class="form-control" data-bind="options: $parent.Dictionaries.PayMethod, optionsText: 'Display', optionsValue: 'ID', value: SelectedID"></select>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-bind="click: Done">Сменить метод</button>
			</div>
		</div>
	</div>
</div>