
<div class="modal" id="routeSegmentSelectModal" tabindex="-1">
	<div class="modal-dialog" data-bind="with: RouteSegmentSelectModal">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Выбор сегментов маршрута</h4>
			</div>
			<div class="modal-body">
				<div class="form-horizontal">
					<!-- ko foreach: CurrentList -->
					<div class="checkbox">
						<label><input type="checkbox" data-bind="checked: $parent.IsChecked($data), click: $parent.ToggleSelected"><span data-bind="text: No"></span> <span data-bind="text: $parents[1].GetPointDisplay(FromRoutePointId)"></span> - <span data-bind="text: $parents[1].GetPointDisplay(ToRoutePointId)"></span></label>
					</div>
					<!-- /ko -->
				</div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-bind="click: Done">Готово</button>
			</div>
		</div>
	</div>
</div>