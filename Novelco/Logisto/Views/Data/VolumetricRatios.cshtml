@model IEnumerable<Logisto.Models.VolumetricRatio>
@{
	ViewBag.Title = "Объемный вес";
}

@section Styles{
}

@section Scripts {
	<script type="text/javascript">
		var modelData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));

		var app = app || {};
		app.urls = app.urls || {};
		app.urls.SaveVolumetricRatio = "@Url.Action("SaveVolumetricRatio", "Data")";
		app.urls.GetNewVolumetricRatio = "@Url.Action("GetNewVolumetricRatio", "Data")";
		app.urls.DeleteVolumetricRatio = "@Url.Action("DeleteVolumetricRatio", "Data")";
	</script>

	@Scripts.Render("~/bundles/jquery-ui")
	<script src="~/Scripts/Data/VolumetricRatios.js"></script>
}

<div>
	<div class="row">
		<div class="col-md-5"><h2>Объемный вес</h2></div>
		<div class="col-md-2 col-md-offset-5"><a href="#" class="btn btn-a" style="margin-top: 22px;" data-bind="click: OpenVolumetricRatioCreate">+новый</a></div>
	</div>

	<table class="table table-condensed">
		<thead>
			<tr>
				<th class="col-md-2">Наименование</th>
				<th class="col-md-3">Коэффициент</th>
				<th class="col-md-1"></th>
			</tr>
		</thead>
		<tbody>
			<!-- ko foreach: Items -->
			<tr>
				<td data-bind="text: Display"></td>
				<td data-bind="text: Value"></td>
				<td>
					<a class="btn btn-default btn-xs" data-bind="click: $parent.OpenVolumetricRatioEdit"><span class="glyphicon glyphicon-pencil"></span></a>
					<a href="#" data-bind="click: $parent.DeleteVolumetricRatio" class="close">&times;</a>
				</td>
			</tr>
			<!-- /ko -->
		</tbody>
	</table>
</div>


@Html.Partial("_VolumetricRatioEditModal")