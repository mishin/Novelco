			<div>
				<h4>Шаблоны заказов</h4>
				<p data-bind="text: OrderTemplatesCount"></p>
			</div>
		</a>
		<a href="@Url.Action("PositionTemplates")" class="col-md-3 datatile">
			<div>
				<h4>Шаблоны должностей</h4>
				<p data-bind="text: PositionTemplatesCount"></p>
			</div>
		</a>
	</div>

