@model IEnumerable<Logisto.Models.PaymentTerm>
@{
	ViewBag.Title = "Типы оплаты по договору";
}

@section Styles{
}

@section Scripts {
	<script type="text/javascript">
		var modelData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));

		var app = app || {};
		app.urls = app.urls || {};
		app.urls.GetNewPaymentTerm = "@Url.Action("GetNewPaymentTerm", "Data")";
		app.urls.SavePaymentTerm = "@Url.Action("SavePaymentTerm", "Data")";
	</script>

	<script src="~/Scripts/Data/PaymentTerms.js"></script>
}

<div>
	<div class="row">
		<div class="col-md-5"><h2>Типы оплаты по договору</h2></div>
		<div class="col-md-3"></div>
		<div class="col-md-2"></div>
		<div class="col-md-2"><button class="btn btn-a" style="margin-top: 22px;" data-bind="click: OpenPaymentTermCreate">+новый</button></div>
	</div>

	<table class="table table-condensed">
		<thead>
			<tr>
				<th class="col-md-2">Наименование</th>
				<th class="col-md-1"></th>
			</tr>
		</thead>
		<tbody>
			<!-- ko foreach: Items -->
			<tr>
				<td data-bind="text: Display"></td>
				<td><a class="btn btn-default btn-xs" data-bind="click: $parent.OpenPaymentTermEdit"><span class="glyphicon glyphicon-pencil"></span></a></td>
			</tr>
			<!-- /ko -->
		</tbody>
	</table>
</div>


@Html.Partial("_PaymentTermEditModal")