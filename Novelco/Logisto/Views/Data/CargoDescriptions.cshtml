@model IEnumerable<Logisto.Models.CargoDescription>
@{
	ViewBag.Title = "Виды груза";
}

@section Styles{
}

@section Scripts {
	<script type="text/javascript">
		var modelData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));

		var app = app || {};
		app.urls = app.urls || {};
		app.urls.GetNewCargoDescription = "@Url.Action("GetNewCargoDescription", "Data")";
		app.urls.SaveCargoDescription = "@Url.Action("SaveCargoDescription", "Data")";
	</script>

	@Scripts.Render("~/bundles/jquery-ui")
	<script src="~/Scripts/Data/CargoDescriptions.js"></script>
}

<div>
	<div class="row">
		<div class="col-md-5"><h2>Виды груза</h2></div>
		<div class="col-md-3"></div>
		<div class="col-md-2"></div>
		<div class="col-md-2"><button class="btn btn-a" style="margin-top: 22px;" data-bind="click:OpenCargoDescriptionCreate">+новый</button></div>
	</div>

	<table class="table table-condensed">
		<thead>
			<tr>
				<th class="col-md-2">Наименование</th>
				<th class="col-md-3">Наименование (en)</th>
				<th class="col-md-1"></th>
			</tr>
		</thead>
		<tbody>
			<!-- ko foreach: Items -->
			<tr>
				<td data-bind="text: Display"></td>
				<td data-bind="text: EnDisplay"></td>
				<td><a class="btn btn-default btn-xs" data-bind="click: $parent.OpenCargoDescriptionEdit"><span class="glyphicon glyphicon-pencil"></span></a></td>
			</tr>
			<!-- /ko -->
		</tbody>
	</table>
</div>


@Html.Partial("_CargoDescriptionEditModal")