
<div class="modal" id="serviceTypeEditModal" tabindex="-1">
	<div class="modal-dialog" data-bind="with: ServiceTypeEditModal">
		<div class="modal-content" data-bind="if: CurrentItem">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
				<!-- ko if: CurrentItem().ID() > 0 -->
				<h4 class="modal-title">Тип услуги <span class="text-ghost">#<span data-bind="text: CurrentItem().ID"></span></span></h4>
				<!-- /ko -->
				<!-- ko ifnot: CurrentItem().ID() > 0 -->
				<h4 class="modal-title">Новый тип услуги</h4>
				<!-- /ko -->
			</div>
			<div class="modal-body">
				<div class="form-horizontal">

					<div class="row form-group">
						<div class="col-md-4">Наименование</div>
						<div class="col-md-8"><input class="form-control" data-bind="textInput: CurrentItem().Name"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">Наименование (en)</div>
						<div class="col-md-8"><input class="form-control" data-bind="textInput: CurrentItem().EnName"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">Количество</div>
						<div class="col-md-8"><input class="form-control" data-bind="textInput: CurrentItem().Count"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">Ед. измерения</div>
						<div class="col-md-8">
							<select class="form-control" data-bind="optionsCaption:'', options: $parent.Dictionaries.Measure, optionsText: 'Display', optionsValue: 'ID', value: CurrentItem().MeasureId"></select>
						</div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">Цена</div>
						<div class="col-md-8"><input class="form-control" data-bind="textInput: CurrentItem().Price"></div>
					</div>

				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-bind="click: Done">Готово</button>
			</div>
		</div>
	</div>
</div>
