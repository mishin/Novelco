
<div class="modal" id="priceEditModal" tabindex="-1" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog" data-bind="with: PriceEditModal">
		<div class="modal-content" data-bind="if: CurrentItem">
			<div class="modal-header">
				<button type="button" class="close" data-bind="click: Close"><span>&times;</span></button>
				<!-- ko if: CurrentItem().ID() > 0 -->
				<h4 class="modal-title">Цена <span class="text-ghost">#<span data-bind="text: CurrentItem().ID"></span></span></h4>
				<!-- /ko -->
				<!-- ko ifnot: CurrentItem().ID() > 0 -->
				<h4 class="modal-title">Новая цена</h4>
				<!-- /ko -->
			</div>
			<div class="modal-body">
				<div class="form-horizontal container-fluid">

					<div class="row form-group">
						<div class="col-md-4">Наименование</div>
						<div class="col-md-8"><span data-bind="text: app.utility.GetDisplay($parent.Dictionaries.Service, CurrentItem().ServiceId)"></span></div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">Количество</div>
						<div class="col-md-8"><input class="form-control" data-bind="textInput: CurrentItem().Count"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">Валюта</div>
						<div class="col-md-8">
							<select class="form-control" data-bind="optionsCaption:'', options: $parent.Dictionaries.Currency, optionsText: 'Display', optionsValue: 'ID', value: CurrentItem().CurrencyId"></select>
						</div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">НДС</div>
						<div class="col-md-8">
							<select class="form-control" data-bind="optionsCaption:'', options: $parent.Dictionaries.Vat, optionsText: 'Display', optionsValue: 'ID', value: CurrentItem().VatId"></select>
						</div>
					</div>

					<div class="row form-group">
						<div class="col-md-4">Цена</div>
						<div class="col-md-8"><input class="form-control" data-bind="textInput: CurrentItem().Sum"></div>
					</div>

				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-bind="click: Done">Готово</button>
			</div>
		</div>
	</div>
</div>
